    },
    "dev" : {
      "user" : "root",
      "host" : "52.77.237.129",
      "ref"  : "origin/master",
      "repo" : "https://github.com/littleplantstudio/api-with-node.git",
      "path" : "/var/www/development",
      "post-deploy" : "npm install && pm2 startOrRestart ecosystem.json --env dev",
